<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    tools:context="com.myapp.thesis.CustomHelp"
    tools:ignore="MergeRootFrame" >

    <ViewFlipper
        android:id="@+id/flip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:id="@+id/pg1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#6960EC" >

            <TextView
                android:id="@+id/pg1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="Placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/pg1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pg1_txt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/abc_list_divider_holo_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pg2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#6960EC" >

            <TextView
                android:id="@+id/pg2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="Placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/pg2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pg2_txt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/abc_list_divider_holo_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pg3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000" >

            <TextView
                android:id="@+id/pg3_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="Placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/pg3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pg3_txt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/abc_list_divider_holo_light" />
        </RelativeLayout>
    </ViewFlipper>

</RelativeLayout>